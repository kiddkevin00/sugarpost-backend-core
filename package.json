{
  "name": "bulletin-board-system-backend",
  "version": "1.4.1",
  "description": "A generic RESTful API backend with all major database connection/ops interfaces implemented.",
  "main": "./src/lib/app.js",
  "bin": {
    "update-test-coverage": "./bin/update-test-coverage.js"
  },
  "config": {
    "ip": "0.0.0.0",
    "port": 8087,
    "databases": {
      "mongo-store": {
        "host": "127.0.0.1",
        "port": 27017,
        "dbName": "BulletinBoardSystem",
        "options": {
          "auto_reconnect": true,
          "poolSize": 10,
          "socketOptions": {
            "connectTimeoutMS": 10000,
            "socketTimeoutMS": 10000
          }
        }
      },
      "postgres-store": {
        "host": "127.0.0.1",
        "port": 5432,
        "dbName": "BulletinBoardSystem",
        "options": {
          "pool": {
            "maxConnections": 10,
            "maxIdleTime": 240,
            "logging": true
          }
        }
      }
    }
  },
  "nyc": {
    "statements": 81.14,
    "branches": 38.75,
    "functions": 73.38,
    "lines": 81.16,
    "excludes": [],
    "report-dir": "./spec/coverage"
  },
  "scripts": {
    "------------- EXPOSED -------------": "",
    "start": "node --stack-size=65500 src/lib/app.js",
    "start-prod": "NODE_ENV=production node --stack-size=65500 src/lib/app.js",
    "lint": "npm run eslint",
    "unit-test": "cat src/spec/support/run_all_the_tests.txt; npm run mocha-unit-test",
    "integration-test": "",
    "coverage:unit-test": "nyc --check-coverage --reporter cobertura --reporter html mocha --opts mocha.opts",
    "coverage:integration-test": "",
    "prepush": "npm run lint && npm run coverage:unit-test && ./bin/update-test-coverage.js",
    "------------- INTERNAL ------------": "",
    "eslint": "eslint --format 'node_modules/eslint-friendly-formatter' src/ example/",
    "jasmine-unit-test": "node src/spec/support/jasmine-test-runner.js -- -t unit",
    "mocha-unit-test": "multi='tap=- xunit=spec/reports/xunit.xml' mocha --opts mocha.opts --reporter mocha-multi | faucet",
    "------------- LOCAL DEV -----------": "",
    "local-unit-test": "mocha --opts mocha.opts --bail",
    "local-integration-test": "",
    "coverage:report": "nyc report",
    "coverage:html-report": "open spec/coverage/index.html",
    "dev:reload": "nodemon --watch src/",
    "dev:watch": "watch 'npm run lint' src/",
    "dev:performance": "nodemon -perf_basic_prof --debug --trace_gc",
    "debug": "node --debug --debug-brk src/lib/app.js"
  },
  "engines": {
    "node": "6.1.0",
    "npm": ">=3.10.9"
  },
  "dependencies": {
    "bluebird": "^3.4.6",
    "body-parser": "^1.15.2",
    "compression": "^1.6.2",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.1",
    "errorhandler": "^1.4.3",
    "express": "^4.14.0",
    "express-session": "^1.14.0",
    "jade": "^1.11.0",
    "method-override": "^2.3.6",
    "mongojs": "^2.4.0",
    "morgan": "^1.7.0",
    "pg": "^6.1.0",
    "pgtools": "^0.2.2",
    "sequelize": "^3.25.0",
    "serve-favicon": "^2.3.2"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "chai-shallow-deep-equal": "^1.4.0",
    "chance": "^1.0.4",
    "eslint": "^3.8.1",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-friendly-formatter": "^2.0.6",
    "eslint-plugin-import": "^1.16.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.4.1",
    "faucet": "0.0.1",
    "husky": "^0.11.9",
    "jasmine": "^2.4.1",
    "jasmine-reporters": "^2.1.1",
    "mocha": "^3.2.0",
    "mocha-multi": "^0.9.0",
    "nodemon": "^1.11.0",
    "nyc": "^8.3.1",
    "sinon": "^1.17.4",
    "sinon-as-promised": "^4.0.0",
    "sinon-chai": "^2.8.0",
    "watch": "^0.19.1"
  },
  "author": "Marcus Hsu",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git@github.com:kiddkevin00/bulletin-board-system-backend.git"
  }
}