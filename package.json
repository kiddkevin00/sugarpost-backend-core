{
  "name": "bulletin-board-system-backend",
  "version": "0.0.0",
  "description": "This is the backend stack of a generic BBS.",
  "main": "./src/lib/app.js",
  "config": {
    "ip": "127.0.0.1",
    "port": 8080,
    "databases": {
      "mongo-store": {
        "storeType": "mongo-store",
        "host": "127.0.0.1",
        "port": 27017,
        "dbName": "bulletin-board-system",
        "options": {
          "server": {
            "autoReconnect": true,
            "reconnectTries": 500,
            "reconnectInterval": 1000,
            "poolSize": 10,
            "socketOptions": {
              "connectTimeoutMS": 10000,
              "socketTimeoutMS": 10000
            }
          }
        }
      }
    }
  },
  "scripts": {
    "start": "node --stack-size=65500 src/lib/app.js",
    "lint": "npm run eslint",
    "eslint": "eslint --format 'node_modules/eslint-friendly-formatter' src/",
    "test": "npm run mocha-unit-test",
    "integration-test": "",
    "coverage": "nyc --all --check-coverage --reporter html mocha --require src/spec/support/mocha-test-runner.js --recursive src/spec/unit/",
    "jasmine-unit-test": "node ./src/spec/support/jasmine-test-runner.js -- -t unit",
    "mocha-unit-test": "multi='tap=- xunit=./spec/reports/xunit.xml' mocha --opts ./mocha.opts | faucet",
    "local-unit-test": "mocha --require src/spec/support/mocha-test-runner.js --recursive --bail src/spec/unit/",
    "local-integration-test": "",
    "debug": "node --debug src/lib/app.js",
    "dev:reload": "nodemon",
    "dev:watch": "watch 'npm run lint' ./src/"
  },
  "engines": {
    "node": "6.1.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "chai-shallow-deep-equal": "^1.4.0",
    "eslint": "^2.13.1",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-friendly-formatter": "^2.0.6",
    "eslint-plugin-import": "^1.7.0",
    "eslint-plugin-jsx-a11y": "^1.2.0",
    "eslint-plugin-react": "^5.1.1",
    "faucet": "0.0.1",
    "jasmine": "^2.4.1",
    "jasmine-reporters": "^2.1.1",
    "mocha": "^2.5.1",
    "mocha-multi": "^0.9.0",
    "sinon": "^1.17.4",
    "sinon-as-promised": "^4.0.0",
    "sinon-chai": "^2.8.0",
    "watch": "^0.19.1"
  },
  "dependencies": {
    "bluebird": "^3.4.6",
    "body-parser": "^1.15.2",
    "compression": "^1.6.2",
    "cookie-parser": "^1.4.3",
    "errorhandler": "^1.4.3",
    "express": "^4.14.0",
    "express-session": "^1.14.0",
    "method-override": "^2.3.6",
    "mongojs": "^2.4.0",
    "morgan": "^1.7.0"
  },
  "author": "Marcus Hsu",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git@github.com:kiddkevin00/bulletin-board-system-backend.git"
  }
}
