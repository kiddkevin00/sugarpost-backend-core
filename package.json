{
  "name": "bulletin-board-system",
  "version": "0.0.0",
  "description": "This is a generic BBS.",
  "main": "src/lib/app.js",
  "config": {
    "ip": "127.0.0.1",
    "port": 8080,
    "databases": {
      "mongo-store": {
        "storeType": "mongo-store",
        "host": "127.0.0.1",
        "port": 27017,
        "dbName": "bulletin-board-system",
        "options": {
          "server": {
            "autoReconnect": true,
            "reconnectTries": 500,
            "reconnectInterval": 1000,
            "poolSize": 10,
            "socketOptions": {
              "connectTimeoutMS": 10000,
              "socketTimeoutMS": 10000
            }
          }
        }
      }
    }
  },
  "scripts": {
    "start": "",
    "eslint": "eslint src/",
    "test": "multi='tap=- xunit=./spec/reports/xunit.xml' npm run mocha-unit-test",
    "integration-test": "",
    "jasmine-unit-test": "node ./src/spec/support/jasmine-test-runner.js -- -t unit",
    "mocha-unit-test": "mocha --opts ./mocha.opts | faucet",
    "local-unit-test": "mocha --require src/spec/support/mocha-test-runner.js src/spec/unit/ --recursive",
    "local-integration-test": "",
    "debug": "",
    "dev:watch": ""
  },
  "engines": {
    "node": "6.1.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "chai-shallow-deep-equal": "^1.4.0",
    "eslint": "^2.9.0",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-plugin-import": "^1.7.0",
    "eslint-plugin-jsx-a11y": "^1.2.0",
    "eslint-plugin-react": "^5.1.1",
    "faucet": "0.0.1",
    "jasmine": "^2.4.1",
    "jasmine-reporters": "^2.1.1",
    "mocha": "^2.5.1",
    "mocha-multi": "^0.9.0",
    "sinon": "^1.17.4",
    "sinon-as-promised": "^4.0.0",
    "sinon-chai": "^2.8.0"
  },
  "dependencies": {
    "express": "^4.14.0",
    "mongojs": "^2.4.0"
  },
  "author": "Marcus Hsu",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git@github.com:kiddkevin00/bulletin-board-system.git"
  }
}
